<% layout("layouts/boilerplate")%>
<% if ( currentUser && like.author.equals(currentUser._id)) {%>
<div class="row">
  <div class="col-6 offset-3">




    <div id="likeCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% like.images.forEach((img, i) => { %>
          <div class="carousel-item <%= i === 0 ? "active" : ""%>">
            <img src ="<%= img.url%>" class="d-block w-100" alt="">
          </div>
          <% }) %>

        </div>
<% if(like.images.length > 1) {%> 
      <button class="carousel-control-prev" type="button" data-bs-target="#likeCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#likeCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
      <% } %>
    </div>


    <div class="card mb-3" style="width: 18rem">
      <div class="card-body">
        <h5 class="display-5"><%= like.title%></h5>
        <p class="card-text"><%= like.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= like.location%></li>
      </ul>

    
      <div class="card-body">
        <a class="card-link btn btn-info" style="background-color: rgba(189, 224, 254); border-color: rgba(189, 224, 254);" href="/likes/<%= like._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/likes/<%=like._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger" style="background-color: rgba(240, 128, 128); border-color: rgba(240, 128, 128);">Delete</button>
        </form>
      </div>
      
      <div class="card-footer text-muted">
        <a href="/likes">Back to your Likeys</a>
      </div>
    </div>
  </div>
</div>
<% } %>
